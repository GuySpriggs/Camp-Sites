        <%- include("../partials/header") %>


        <div class = "container">
        <header class = "jumbotron">
            <div class = "container">
        <h1><span class="glyphicon glyphicon-tent"></span> Welcome to CampSites!</h1>
        <p>View our hand picked camp grounds!</p>
        <p>
            <a class = "btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
        </p>
        </div>
        </header>

<div class = "row text-center" >
        <% campgrounds.forEach(function(campgrounds){ %>
        <div class = "col-md-6 col-sm-12 col-lg-3">
                <div class = "thumbnail">
                    <img class="img-responsive" src="<%=campgrounds.image %>">
                    <div class = "caption">
                        <h4><%= campgrounds.name %> </h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campgrounds._id %>" class= "btn btn-primary">More Info!</a>
                    </p>
                </div>
            </div>
        <% }); %>
        </div>
</div>

        <%- include("../partials/footer") %>